{
  "name": "ReactNativeSkeleton",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --coverage",
    "xcode": "open ios/ReactNativeSkeleton.xcodeproj",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "androidStudio": "open -a /Applications/'Android Studio.app' ./android"
  },
  "dependencies": {
    "react": "16.6.0-alpha.8af6728",
    "react-native": "0.57.4",
    "react-native-navigation": "^2.0.2638",
    "react-native-ui-lib": "^3.3.287",
    "remx": "^2.0.51"
  },
  "devDependencies": {
    "babel-jest": "23.6.0",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "0.49.0",
    "react-test-renderer": "16.6.0-alpha.8af6728"
  },
  "jest": {
    "preset": "react-native"
  },
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/screens/**/*.js",
    "!src/**/*.e2e.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
