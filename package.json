{
  "name": "ReactNativeSkeleton",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --coverage",
    "xcode": "open ios/ReactNativeSkeleton.xcodeproj",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "androidStudio": "open -a /Applications/'Android Studio.app' ./android"
  },
  "dependencies": {
    "react": "16.8.3",
    "react-native": "0.59.x",
    "react-native-navigation": "^2.0.2638",
    "react-native-ui-lib": "^3.3.287",
    "remx": "^2.0.51"
  },
  "devDependencies": {
    "babel-jest": "23.6.0",
    "babel-polyfill": "^6.26.0",
    "detox": "^12.7.0",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "0.49.0",
    "mocha": "^6.1.4",
    "react-test-renderer": "16.6.0-alpha.8af6728"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "module:metro-react-native-babel-preset"
        ],
        "retainLines": true
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "useBabelrc": true
      }
    },
    "moduleNameMapper": {
      "^[./a-zA-Z0-9$_-]+\\.png$": "RelativeImageStub"
    },
    "resetMocks": true,
    "resetModules": true,
    "preset": "react-native"
  },
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/screens/**/*.js",
    "!src/**/*.e2e.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/ReactNativeSkeleton.app",
        "build": "xcodebuild -project ios/ReactNativeSkeleton.xcodeproj -scheme ReactNativeSkeleton -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      }
    },
    "test-runner": "mocha"
  }
}
